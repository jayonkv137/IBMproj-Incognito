<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">
    <ImageView
        android:id="@+id/meter_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/metre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300px"/>
    <TextView
        android:id="@+id/letsgetstarted"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/meter_icon"
        android:text="Let's check in on your social anxiety level."
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/middle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/letsgetstarted"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="Answer a few questions to find out how you're doing and what you can do to feel better and minimise your worry."
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/continue_btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/middle_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn"
        android:elevation="30dp"
        android:fontFamily="@font/roboto"
        android:paddingTop="5dp"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#E1E1E1"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>